@model IEnumerable<ProyWebNoSQL.Entities.Pedidos>

@{
    ViewData["Title"] = "Ver pedidos";
}

<h1>Ver pedidos</h1>

<div class="form-group">
    <a href="@Url.Action("AgregarPedido", "Pedidos")" class="btn btn-primary">Crear Pedidor</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                Forma de pago
            </th>
            <th>
                Id Usuario
            </th>
            <th>
                Id Producto
            </th>
            <th>
                Cantidad
            </th>
            <th>
                Total
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FormaDePago)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdUsuario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdProducto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cantidad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
                <td>
                     @Html.ActionLink("Editar", "EditarPedido", new { idPedido = item.id }) |
                        @Html.ActionLink("Ver Peido", "VerPedidoEspecifico", new { idPedido = item.id }) |
                        @Html.ActionLink("Eliminar", "EliminarPedido", new { idPedido = item.id })
                </td>
            </tr>
        }
    </tbody>
</table>
