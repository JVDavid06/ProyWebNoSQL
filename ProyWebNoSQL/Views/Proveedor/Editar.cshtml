@model ProyWebNoSQL.Entities.Proveedor

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>


    <h4>Proveedor</h4>
    <hr />

        @using (Html.BeginForm("EditarProveedor", "Proveedor", FormMethod.Post))
 {

    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.id)
        </dt>
        <dd class = "col-sm-10">
            @Html.TextBoxFor(model => model.id, new {@readonly = "readonly"})
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Nombre")
        </dt>
        <dd class = "col-sm-10">
            @Html.TextBoxFor(model => model.NombreProveedor)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Direccion)
        </dt>
        <dd class = "col-sm-10">
            @Html.TextBoxFor(model => model.Direccion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Telefono)
        </dt>
        <dd class = "col-sm-10">
            @Html.TextBoxFor(model => model.Telefono)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.TextBoxFor(model => model.Email)
        </dd>
    </dl>
    
      <Br></Br>
  <div class="form-group">
      <input type="submit" value="Ediatr" class="btn btn-primary" />
       <a href="@Url.Action("VerProveedores", "Proveedor")" class="btn btn-warning">Regresar</a>
  </div>

}
